// Utilizando while

<?php
$numero = 1;

while ($numero <= 10) {
  echo $numero . "<br>";
  $numero++;
}
?>

// Utilizando for

<?php
for ($numero = 1; $numero <= 10; $numero++) {
  echo $numero . "<br>";
}
?>

// Utilizando do while

<?php
$numero = 1;

do {
  echo $numero . "<br>";
  $numero++;
} while ($numero <= 10);
?>
